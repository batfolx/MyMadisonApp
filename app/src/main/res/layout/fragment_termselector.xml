<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/term_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:clickable="true"
    android:focusable="true">

    <Button
        android:id="@+id/fall_term_button"
        android:layout_width="212dp"
        android:layout_height="129dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="140dp"
        android:text="@string/fall_term_button"
        android:backgroundTint="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spring_term_button"
        android:layout_width="212dp"
        android:layout_height="129dp"
        android:text="@string/spring_term_button"
        android:backgroundTint="@color/design_default_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fall_term_button" />

    <Button
        android:id="@+id/summer_term_button"
        android:layout_width="212dp"
        android:layout_height="129dp"
        android:text="@string/summer_term_button"
        android:backgroundTint="@color/design_default_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spring_term_button" />

    <TextView
        android:id="@+id/term_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/term_instructions"
        android:textSize="30sp"
        android:textColor="@color/lb_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>