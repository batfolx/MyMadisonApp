<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/recent_meal_plan_transactions_layout"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_and_time_transactions"

        android:layout_width="104dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_label_transaction" />


    <TextView
        android:id="@+id/location_transactions"
        android:layout_width="104dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toEndOf="@+id/date_and_time_transactions"
        app:layout_constraintTop_toBottomOf="@+id/location_transaction" />

    <TextView
        android:id="@+id/date_label_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Date/Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/location_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:text="Location"
        app:layout_constraintStart_toEndOf="@+id/date_label_transaction"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>