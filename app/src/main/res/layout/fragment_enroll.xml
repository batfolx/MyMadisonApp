<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enroll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/courses_recycler_view"
    tools:itemCount="6"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_text_view"
                android:text="Description"
                android:textSize="35dp"/>


            <TextView
                android:text="Days and Times"
                android:id="@+id/days_and_times_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>



    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="576dp"
        android:text="@string/add_button" />

    <Button
        android:id="@+id/swap_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="576dp"
        android:text="@string/swap_button" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="576dp"
        android:text="@string/edit_button" />


    <Button
        android:id="@+id/drop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="576dp"
        android:text="@string/drop_button" />


    <Button
        android:id="@+id/student_center_button"
        android:layout_width="211dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="40dp"
        android:text="@string/student_center_button" />

    <TextView
        android:id="@+id/jmu_text_view"
        android:layout_width="295dp"
        android:layout_height="124dp"
        android:layout_marginTop="16dp"
        android:text="@string/jmu_text_view" />

</LinearLayout>